includes:
    - vendor/phpstan/phpstan-symfony/extension.neon

parameters:
    level: 5
    paths:
        - src
    excludePaths:
        - src/Kernel.php
    symfony:
        containerXmlPath: var/cache/dev/App_KernelDevDebugContainer.xml
    ignoreErrors:
        # PHP 8.4 property hooks + Doctrine: PHPStan doesn't understand these yet
        - '#Property .+::\$id is never written, only read#'
        - '#Property .+::\$id is unused#'
        - '#Property .+::\$ip.+ is never read, only written#'
        # Doctrine relations are managed by ORM, not directly accessed
        - '#Property .+::\$rolePermissions is never read, only written#'
        - '#Property .+::\$roleRanks is never read, only written#'
        - '#Property .+::\$(parentRole|childRole|role|permission|bannedUser|staffUser).+ can be removed from the property type#'
        # Article module Doctrine relations
        - '#Property .+::\$(author|category|tags|article|user|parent|replies).+ can be removed from the property type#'
